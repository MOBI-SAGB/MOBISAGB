<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sagb.mobisagb.insemination.InsemArtificiel_Init">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/NumCertIA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numCertIA_tv" />

        <Spinner
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:id="@+id/numCertIA_sp" />

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:calendarViewShown="false"
            />

    </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/layout1">

         <TextView
             android:text="@string/ModeReglement"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/mode_reglement_tv" />

         <Spinner
             android:layout_width="129dp"
             android:layout_height="wrap_content"
             android:id="@+id/mode_reglement_sp" />

     </LinearLayout>



</RelativeLayout>
